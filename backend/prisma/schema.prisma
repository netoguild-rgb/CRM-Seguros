generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- CONFIGURAÇÕES DO SISTEMA ---
model SystemConfig {
  id              Int     @id @default(autoincrement())
  storageType     String  @default("LOCAL")
  googleDriveJson Json?   
  googleFolderId  String? 
  smtpHost        String?
  smtpPort        Int?
  smtpUser        String?
  smtpPass        String?
  smtpSecure      Boolean @default(true)
}

// --- USUÁRIOS (LOGIN) ---
model User {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String   
  perfil    String   @default("PRODUTOR") // 'ADMIN' ou 'PRODUTOR'
  comissao  Float    @default(10)         // % padrão
  
  apolices  Policy[] // Vendas deste usuário
  criadoEm  DateTime @default(now())
}

// --- CLIENTES ---
model Client {
  id               Int      @id @default(autoincrement())
  nome             String
  tipo             String   @default("PF")
  cpf_cnpj         String?  @unique
  whatsapp         String?
  email            String?
  cidade           String?
  estado           String?
  
  // Veículo
  renavam            String?
  modelo_veiculo     String?
  ano_veiculo        String?
  condutor_principal String?
  km                 String?
  guincho            String?
  carro_reserva      String?
  danos_terceiros    String? 

  apolices         Policy[]
  documentos       Document[]
  claims           Claim[]
  criadoEm         DateTime @default(now())
}

// --- APÓLICES ---
model Policy {
  id             Int      @id @default(autoincrement())
  numero         String?
  status         String   @default("ATIVA")
  tipo_seguro    String
  data_inicio    DateTime
  data_fim       DateTime
  
  // Financeiro
  premio_liquido Float?   
  comissao_total Float?   
  
  // Vínculo com Produtor
  userId         Int?     
  user           User?    @relation(fields: [userId], references: [id])
  
  pdf_url        String?  
  pdf_file_id    String?  
  clientId       Int
  client         Client   @relation(fields: [clientId], references: [id])
  claims         Claim[]
}

// --- DOCUMENTOS ---
model Document {
  id        Int      @id @default(autoincrement())
  nome      String
  categoria String   
  url       String   
  tipo      String   
  path      String?  
  clientId  Int
  client    Client   @relation(fields: [clientId], references: [id])
  claimId   Int?
  claim     Claim?   @relation(fields: [claimId], references: [id])
  criadoEm  DateTime @default(now())
}

// --- SINISTROS ---
model Claim {
  id             Int      @id @default(autoincrement())
  status         String   @default("ABERTO")
  data_ocorrencia DateTime
  data_aviso     DateTime @default(now())
  tipo_sinistro  String
  descricao      String?
  oficina_nome   String?
  oficina_tel    String?
  terceiro_nome  String?
  terceiro_tel   String?
  placa_terceiro String?
  valor_franquia Float?
  valor_orcamento Float?
  valor_final    Float?
  clientId       Int
  client         Client   @relation(fields: [clientId], references: [id])
  policyId       Int?
  policy         Policy?  @relation(fields: [policyId], references: [id])
  documentos     Document[]
  atualizadoEm   DateTime @updatedAt
}

// --- LEADS ---
model Lead {
  id              Int      @id @default(autoincrement())
  criadoEm        DateTime @default(now())
  nome            String
  whatsapp        String
  email           String?
  cpf             String?
  status          String   @default("NOVO")
  tipo_seguro     String?
  placa           String?
  modelo_veiculo  String?
  ano_veiculo     String?
  uso_veiculo     String?
  dados_extras    Json?
}